---
// src/components/RelatedWorkflows.astro
export interface Props {
  workflows: Array<{
    id: number;
    title: string;
    slug: string;
    description: string;
    icon: string;
    rating: number;
    priceMin: number;
    priceMax: number;
    categoryName: string;
  }>;
  currentWorkflow: {
    title: string;
    categoryName: string;
  };
}

const { workflows, currentWorkflow } = Astro.props;
---

{workflows.length > 0 && (
  <section class="py-16 lg:py-24 bg-gradient-to-br from-gray-50 to-blue-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Section Header -->
      <div class="text-center mb-16">
        <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4">
          Otros Workflows de {currentWorkflow.categoryName}
        </h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          Descubre m√°s automatizaciones que pueden potenciar tu negocio en la misma categor√≠a
        </p>
      </div>

      <!-- Workflows Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {workflows.map((workflow, index) => (
          <article class="group bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-2">
            <!-- Card Header -->
            <div class="p-6 pb-4">
              <div class="flex items-center justify-between mb-4">
                <div class="w-14 h-14 bg-gradient-to-br from-primary-500 to-secondary-500 rounded-xl flex items-center justify-center text-2xl group-hover:scale-110 transition-transform duration-300">
                  {workflow.icon}
                </div>
                <div class="text-right">
                  <div class="flex items-center text-yellow-500 mb-1">
                    <svg class="w-4 h-4 fill-current" viewBox="0 0 20 20">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                    </svg>
                    <span class="ml-1 text-sm font-medium text-gray-700">{workflow.rating}</span>
                  </div>
                  <span class="text-xs text-primary-600 font-medium bg-primary-50 px-2 py-1 rounded-full">
                    {workflow.categoryName}
                  </span>
                </div>
              </div>

              <!-- Title -->
              <h3 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-primary-600 transition-colors leading-tight">
                {workflow.title}
              </h3>

              <!-- Description -->
              <p class="text-gray-600 leading-relaxed mb-4 line-clamp-3">
                {workflow.description}
              </p>
            </div>

            <!-- Card Footer -->
            <div class="px-6 pb-6">
              <!-- Price -->
              <div class="flex items-center justify-between mb-4">
                <div class="text-2xl font-bold text-gray-900">
                  ‚Ç¨{workflow.priceMin}
                  {workflow.priceMax > workflow.priceMin && (
                    <span class="text-sm font-normal text-gray-500"> - ‚Ç¨{workflow.priceMax}</span>
                  )}
                </div>
                <span class="text-sm text-gray-500">Desde</span>
              </div>

              <!-- Actions -->
              <div class="grid grid-cols-2 gap-3">
                <a 
                  href={`/workflows/${workflow.slug}`}
                  class="flex items-center justify-center px-4 py-3 bg-gradient-to-r from-primary-500 to-secondary-500 text-white font-semibold rounded-xl hover:from-primary-600 hover:to-secondary-600 transform hover:-translate-y-0.5 transition-all duration-300 shadow-lg hover:shadow-xl text-sm"
                  onclick={`
                    if (window.analytics) {
                      window.analytics.trackWorkflowInteraction('related_workflow_view', {
                        title: '${workflow.title}',
                        slug: '${workflow.slug}',
                        categoryName: '${workflow.categoryName}',
                        priceMin: ${workflow.priceMin},
                        source: 'related_section',
                        currentWorkflow: '${currentWorkflow.title}'
                      });
                    }
                  `}
                >
                  Ver Detalles
                </a>
                
                <button 
                  onclick={`
                    openCalendlyModal('workflow', {
                      title: '${workflow.title}',
                      slug: '${workflow.slug}',
                      categoryName: '${workflow.categoryName}',
                      priceMin: ${workflow.priceMin}
                    });
                  `}
                  class="flex items-center justify-center px-4 py-3 bg-white border-2 border-gray-200 text-gray-700 font-semibold rounded-xl hover:border-primary-500 hover:text-primary-600 hover:bg-primary-50 transform hover:-translate-y-0.5 transition-all duration-300 text-sm"
                >
                  <span class="mr-2">üìÖ</span>
                  Demo
                </button>
              </div>
            </div>

            <!-- Hover Effect Overlay -->
            <div class="absolute inset-0 bg-gradient-to-t from-primary-500/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 rounded-2xl pointer-events-none"></div>
          </article>
        ))}
      </div>

      <!-- CTA Section -->
      <div class="mt-16 text-center">
        <div class="bg-white rounded-2xl shadow-lg p-8 lg:p-12 border border-gray-200 max-w-4xl mx-auto">
          <h3 class="text-2xl lg:text-3xl font-bold text-gray-900 mb-4">
            ¬øNecesitas m√∫ltiples workflows?
          </h3>
          <p class="text-lg text-gray-600 mb-8 max-w-2xl mx-auto">
            Ahorra hasta un 30% implementando m√∫ltiples workflows. 
            Nuestros paquetes incluyen descuentos por volumen y soporte prioritario.
          </p>
          
          <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
            <button 
              onclick="openCalendlyModal('consultation')"
              class="inline-flex items-center justify-center px-8 py-4 bg-gradient-to-r from-primary-500 to-secondary-500 text-white font-semibold rounded-xl hover:from-primary-600 hover:to-secondary-600 transform hover:-translate-y-1 transition-all duration-300 shadow-lg hover:shadow-xl"
            >
              <span class="mr-2">üíº</span>
              Consultor√≠a Empresarial
            </button>
            
            <a 
              href="/#catalog-section" 
              class="inline-flex items-center justify-center px-8 py-4 bg-gray-100 text-gray-900 font-semibold rounded-xl hover:bg-gray-200 transition-colors"
            >
              <span class="mr-2">üîç</span>
              Ver Todos los Workflows
            </a>
          </div>

          <!-- Trust Indicators -->
          <div class="mt-8 pt-6 border-t border-gray-100">
            <div class="flex flex-wrap justify-center items-center gap-8 text-sm text-gray-500">
              <div class="flex items-center">
                <svg class="w-5 h-5 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                Descuentos por volumen
              </div>
              <div class="flex items-center">
                <svg class="w-5 h-5 text-blue-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
                </svg>
                Soporte prioritario
              </div>
              <div class="flex items-center">
                <svg class="w-5 h-5 text-purple-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M12.395 2.553a1 1 0 00-1.45-.385c-.345.23-.614.558-.822.88-.214.33-.403.713-.57 1.116-.334.804-.614 1.768-.84 2.734a31.365 31.365 0 00-.613 3.58 2.64 2.64 0 01-.945-1.067c-.328-.68-.398-1.534-.398-2.654A1 1 0 005.05 6.05 6.981 6.981 0 003 11a7 7 0 1011.95-4.95c-.592-.591-.98-.985-1.348-1.467-.363-.476-.724-1.063-1.207-2.03zM12.12 15.12A3 3 0 017 13s.879.5 2.5.5c0-1 .5-4 1.25-4.5.5 1 .786 1.293 1.371 1.879A2.99 2.99 0 0113 13a2.99 2.99 0 01-.879 2.121z" clip-rule="evenodd"></path>
                </svg>
                Implementaci√≥n coordinada
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Browse More Section -->
      <div class="mt-12 text-center">
        <a 
          href="/#catalog-section"
          class="inline-flex items-center text-primary-600 hover:text-primary-700 font-semibold transition-colors group"
        >
          <span>Explorar m√°s workflows</span>
          <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
          </svg>
        </a>
      </div>
    </div>
  </section>
)}

<style>
  /* Line clamp utility for description */
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  /* Staggered animation for related workflows */
  article:nth-child(1) { animation-delay: 0.1s; }
  article:nth-child(2) { animation-delay: 0.2s; }
  article:nth-child(3) { animation-delay: 0.3s; }

  @keyframes slideInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  article {
    animation: slideInUp 0.6s ease-out both;
  }

  /* Enhanced hover effects */
  article::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.05), rgba(118, 75, 162, 0.05));
    opacity: 0;
    transition: opacity 0.3s ease;
    border-radius: 1rem;
    pointer-events: none;
  }

  article:hover::before {
    opacity: 1;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .grid.grid-cols-2 {
      grid-template-columns: 1fr;
      gap: 0.75rem;
    }
    
    article {
      padding: 1rem;
    }
  }
</style>